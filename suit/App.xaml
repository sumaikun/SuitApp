<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="suit.App">
    <Application.Resources>
        <ResourceDictionary>

            <OnPlatform x:TypeArguments="x:String" x:Key="OptimaFont">
                <On Platform="Android" Value="Optima.ttf#Optima" />
                <On Platform="UWP" Value="/Assets/Optima.ttf#Optima" />
                <On Platform="iOS" Value="Optima" />
            </OnPlatform>

            <Style x:Key="CustomToolBar" TargetType="Label">
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />                   
                <Setter Property="FontSize" Value="22" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontFamily" Value="{StaticResource OptimaFont}" />                
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>